{
  "name": "composer-cucumber-steps",
  "version": "0.7.5",
  "description": "A library of Cucumber steps for testing Hyperledger Composer",
  "main": "index.js",
  "scripts": {
    "pretest": "npm run licchk",
    "licchk": "license-check",
    "postlicchk": "npm run doc",
    "doc": "jsdoc --pedantic --recurse -c jsdoc.conf",
    "postdoc": "npm run lint",
    "lint": "eslint .",
    "test-inner": "mocha --recursive -t 5000 && cucumber-js",
    "test": "nyc npm run test-inner"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hyperledger/composer.git"
  },
  "keywords": [
    "blockchain"
  ],
  "author": "Hyperledger Composer",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/hyperledger/composer/issues"
  },
  "homepage": "https://github.com/hyperledger/composer#readme",
  "devDependencies": {
    "chai-as-promised": "^6.0.0",
    "cucumber": "^2.2.0",
    "eslint": "^3.17.1",
    "jsdoc": "^3.4.3",
    "license-check": "^1.1.5",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2"
  },
  "license-check-config": {
    "src": [
      "**/*.js",
      "!./coverage/**/*",
      "!./node_modules/**/*",
      "!./out/**/*"
    ],
    "path": "header.txt",
    "blocking": true,
    "logInfo": false,
    "logError": true
  },
  "nyc": {
    "exclude": [
      "coverage/**",
      "features/**",
      "out/**",
      "scripts/**",
      "systest/**",
      "test/**"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true,
    "check-coverage": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100
  },
  "dependencies": {
    "browserfs": "^1.1.0",
    "chai": "^3.5.0",
    "composer-admin": "^0.7.5",
    "composer-client": "^0.7.5",
    "composer-common": "^0.7.5",
    "composer-connector-embedded": "^0.7.5",
    "thenify-all": "^1.6.0"
  }
}
