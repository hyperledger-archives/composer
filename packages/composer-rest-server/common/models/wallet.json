{
    "name": "Wallet",
    "description": "A wallet stores identities for the logged in user",
    "plural": "wallets",
    "base": "PersistedModel",
    "forceId": true,
    "idInjection": true,
    "properties": {
        "description": {
            "type": "String",
            "description": "The description for this wallet"
        },
        "createdAsDefault": {
            "type": "Boolean",
            "default": false,
            "description": "Was this wallet created as the default wallet?"
        },
        "defaultIdentity": {
            "type": "Number",
            "description": "The default identity for this wallet"
        }
    },
    "validations": [],
    "relations": {
        "user": {
            "type": "belongsTo",
            "model": "user",
            "foreignKey": "userId"
        },
        "identities": {
            "type": "hasMany",
            "model": "WalletIdentity",
            "foreignKey": "walletId"
        }
    },
    "acls": [
        {
            "accessType": "*",
            "permission": "DENY",
            "principalId": "$everyone",
            "principalType": "ROLE"
        },
        {
            "accessType": "*",
            "permission": "ALLOW",
            "principalId": "$authenticated",
            "principalType": "ROLE",
            "property": "find"
        },
        {
            "accessType": "*",
            "permission": "ALLOW",
            "principalId": "$authenticated",
            "principalType": "ROLE",
            "property": "create"
        },
        {
            "accessType": "*",
            "permission": "ALLOW",
            "principalId": "$owner",
            "principalType": "ROLE"
        },
        {
            "accessType": "EXECUTE",
            "permission": "ALLOW",
            "principalId": "$authenticated",
            "principalType": "ROLE",
            "property": "getDefaultWallet"
        }
    ],
    "methods": [],
    "hidden": [
        "userId",
        "createdAsDefault",
        "defaultIdentity"
    ]
}
