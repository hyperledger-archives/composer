extends ../layouts/layout

block content
  .row
    .col-md-12
      h3 In order to use this REST API, you must log in.
      br
      ul.list-inline.list-unstyled
        for provider in providers
          li
            a.btn.btn-primary(href='/auth/' + provider.provider) Login with #{provider.display}
      br
      if (messages.error)
        p
          span(style="color:red")= messages.error
