{
  "name": "loopback-connector-composer",
  "version": "0.20.3",
  "description": "A Loopback connector for Hyperledger Composer",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "main": "index.js",
  "scripts": {
    "pretest": "npm run lint",
    "lint": "eslint .",
    "postlint": "npm run licchk",
    "licchk": "license-check-and-add",
    "test": "nyc mocha --recursive -t 10000",
    "mocha": "mocha --recursive -t 10000"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperledger/composer.git"
  },
  "keywords": [
    "blockchain",
    "hyperledger",
    "solutions"
  ],
  "author": "Hyperledger Composer",
  "license": "Apache-2.0",
  "dependencies": {
    "composer-client": "0.20.3",
    "composer-common": "0.20.3",
    "loopback": "3.4.0",
    "loopback-connector": "4.0.0",
    "node-cache": "4.1.1"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "chai-as-promised": "6.0.0",
    "composer-admin": "0.20.3",
    "composer-connector-embedded": "0.20.3",
    "eslint": "3.17.1",
    "jsdoc": "3.5.5",
    "license-check-and-add": "2.3.1",
    "loopback": "2.35.0",
    "mocha": "3.4.2",
    "nyc": "11.1.0",
    "sinon": "2.3.8",
    "sleep-promise": "2.0.0"
  },
  "license-check-and-add-config": {
    "folder": ".",
    "license": "LICENSE.txt",
    "exact_paths_method": "EXCLUDE",
    "exact_paths": [
      "coverage",
      "node_modules",
      ".nyc_output",
      "composer-logs"
    ],
    "file_type_method": "EXCLUDE",
    "file_types": [
      ".yml",
      ".conf"
    ],
    "insert_license": false,
    "license_formats": {
      "js|cto|acl|qry": {
        "prepend": "/*",
        "append": " */",
        "eachLine": {
          "prepend": " * "
        }
      },
      "npmrc|editorconfig": {
        "eachLine": {
          "prepend": "# "
        }
      },
      "md": {
        "file": "../../markdown-license.txt"
      }
    }
  },
  "nyc": {
    "exclude": [
      "coverage/**",
      "integration-test/**",
      "out/**",
      "scripts/**",
      "systest/**",
      "test/**"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true,
    "check-coverage": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100
  }
}
