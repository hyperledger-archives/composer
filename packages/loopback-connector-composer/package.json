{
  "name": "loopback-connector-composer",
  "version": "0.8.0",
  "description": "A Loopback connector for Hyperledger Composer",
  "engines": {
    "node": ">=6",
    "npm": ">=3"
  },
  "main": "index.js",
  "scripts": {
    "pretest": "npm run lint",
    "lint": "eslint .",
    "postlint": "npm run licchk",
    "licchk": "license-check",
    "test": "nyc mocha --recursive",
    "integration-test": "mocha -t 0 integration-test",
    "integration-test-debug": "mocha $NODE_DEBUG_OPTION -t 0 integration-test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperledger/composer.git"
  },
  "keywords": [
    "blockchain",
    "hyperledger",
    "solutions"
  ],
  "author": "Hyperledger Composer",
  "license": "Apache-2.0",
  "dependencies": {
    "composer-client": "^0.8.0",
    "composer-common": "^0.8.0",
    "loopback": "^3.4.0",
    "loopback-connector": "^4.0.0",
    "node-cache": "^4.1.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "composer-admin": "^0.8.0",
    "composer-connector-embedded": "^0.8.0",
    "eslint": "^3.17.1",
    "jsdoc": "^3.4.3",
    "license-check": "^1.1.5",
    "loopback": "^2.35.0",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "sinon": "^1.17.7",
    "sinon-as-promised": "^4.0.2",
    "sleep-promise": "^2.0.0"
  },
  "license-check-config": {
    "src": [
      "**/*.js",
      "!./coverage/**/*",
      "!./node_modules/**/*",
      "!./out/**/*"
    ],
    "path": "header.txt",
    "blocking": true,
    "logInfo": false,
    "logError": true
  },
  "nyc": {
    "exclude": [
      "coverage/**",
      "integration-test/**",
      "out/**",
      "scripts/**",
      "systest/**",
      "test/**"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true,
    "check-coverage": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100
  }
}
