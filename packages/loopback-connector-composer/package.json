{
  "name": "loopback-connector-composer",
  "version": "0.15.0",
  "description": "A Loopback connector for Hyperledger Composer",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "main": "index.js",
  "scripts": {
    "pretest": "npm run lint",
    "lint": "eslint .",
    "postlint": "npm run licchk",
    "licchk": "license-check",
    "test": "nyc mocha --recursive -t 10000",
    "mocha": "mocha --recursive -t 10000"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperledger/composer.git"
  },
  "keywords": [
    "blockchain",
    "hyperledger",
    "solutions"
  ],
  "author": "Hyperledger Composer",
  "license": "Apache-2.0",
  "dependencies": {
    "composer-client": "0.15.0",
    "composer-common": "0.15.0",
    "loopback": "3.4.0",
    "loopback-connector": "4.0.0",
    "node-cache": "4.1.1"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "chai-as-promised": "6.0.0",
    "composer-admin": "0.15.0",
    "composer-connector-embedded": "0.15.0",
    "eslint": "3.17.1",
    "jsdoc": "3.5.5",
    "license-check": "1.1.5",
    "loopback": "2.35.0",
    "mocha": "3.4.2",
    "nyc": "11.1.0",
    "sinon": "2.3.8",
    "sleep-promise": "2.0.0"
  },
  "license-check-config": {
    "src": [
      "**/*.js",
      "!./coverage/**/*",
      "!./node_modules/**/*",
      "!./out/**/*"
    ],
    "path": "header.txt",
    "blocking": true,
    "logInfo": false,
    "logError": true
  },
  "nyc": {
    "exclude": [
      "coverage/**",
      "integration-test/**",
      "out/**",
      "scripts/**",
      "systest/**",
      "test/**"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true,
    "check-coverage": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100
  }
}
